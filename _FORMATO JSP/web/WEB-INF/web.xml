<?xml version="1.0" encoding="ISO-8859-1"?>
<!DOCTYPE web-app PUBLIC "-//Sun Microsystems, Inc.//DTD Web Application 2.3//EN" "http://java.sun.com/j2ee/dtds/web-app_2_3.dtd">
<web-app>

    <welcome-file-list>
        <welcome-file>index.jsp</welcome-file>
    </welcome-file-list>
    
    <servlet>
       <servlet-name>TarefaServlet</servlet-name>
       <servlet-class>Tarefas.TarefaServlet</servlet-class>
   </servlet>

   <servlet-mapping>
       <servlet-name>TarefaServlet</servlet-name>
       <url-pattern>/listarTarefas</url-pattern>
   </servlet-mapping>   
   
    <resource-ref>
        <description>PostgreSQL - MeuDB</description>
        <res-ref-name>jdbc/MeuDB</res-ref-name>
        <res-type>javax.sql.DataSource</res-type>
        <res-auth>Container</res-auth>
    </resource-ref>
    
</web-app>